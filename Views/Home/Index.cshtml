
@{
    ViewData["Title"] = "Salahiyat";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
            font-family: 'Poppins', sans-serif;
        }

        .home-background {
            width: 100%;
            height: 100vh;
            background-image: url('@Url.Content("~/images/background.png")'); /* update path if needed */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
        }

        .login-btn {
            position: absolute;
            left: 20%; /* moved slightly to the right */
            top: 60%;
            background: linear-gradient(90deg, #009b94, #33c5ba);
            color: #ffffff;
            border: none;
            border-radius: 25px;
            padding: 12px 40px;
            font-size: 1.1rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            cursor: pointer;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
            transition: 0.3s ease;
        }

        .login-btn:hover {
            background: linear-gradient(90deg, #007e78, #28a99d);
            transform: translateY(-2px);
        }

        .login-btn:active {
            transform: scale(0.98);
        }

        @@media (max-width: 768px) {
            .login-btn {
                left: 50%;
                top: 70%;
                transform: translateX(-50%);
                padding: 10px 30px;
            }
        }
    </style>
</head>
<body>
    <div class="home-background">
<button class="login-btn" onclick="window.location.href='@Url.Action("Login","Account")'">Log In</button>
    </div>
</body>
</html>

@if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}
