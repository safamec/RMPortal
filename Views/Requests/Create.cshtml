@model MediaAccessRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Removable Media Access Request Form";
}

<div class="container py-5">
    <div class="card shadow-lg rounded-3 border-0" style="background: rgba(255,255,255,0.95);">
        <div class="card-body p-5">
            <h2 class="card-title mb-4" style="color: #009b94; font-weight: bold;">Removable Media Access Request Form</h2>
            <hr class="mb-4 border-2" style="border-color: #009b94;" />

            <div class="text-danger mb-3" asp-validation-summary="All"></div>

            <form asp-controller="Requests" asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                @* Apply thinner, darker borders to all inputs and textarea *@
                <style>
                    input.form-control, textarea.form-control {
                        border-width: 1px;
                        border-color: #00796b;
                        border-radius: 0.375rem;
                        box-shadow: none;
                    }

                    input.form-control:focus, textarea.form-control:focus {
                        border-color: #009b94;
                        box-shadow: 0 0 0 0.1rem rgba(0, 155, 148, 0.25);
                    }
                </style>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Request Number</label>
                    <input asp-for="RequestNumber" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Employment Status</label><br />
                    <input type="radio" asp-for="EmploymentStatus" value="EMPLOYEE" /> Employee
                    <input type="radio" asp-for="EmploymentStatus" value="CONTRACTOR" class="ms-3" /> Contractor
                    <span class="text-danger" asp-validation-for="EmploymentStatus"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Employee Number/Employer</label>
                    <input asp-for="EmployeeNumberOrEmployer" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Title</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Office Extension Number</label>
                    <input asp-for="OfficeExtension" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Department</label>
                    <input asp-for="Department" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Directorate</label>
                    <input asp-for="Directorate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Login Name (SAM)</label>
                    <input asp-for="LoginName" class="form-control" readonly />
                    <span class="text-danger" asp-validation-for="LoginName"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">User Machine ID</label>
                    <input asp-for="UserMachineId" class="form-control" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">End Date (required)</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span class="text-danger" asp-validation-for="EndDate"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Classification of Information Being Accessed</label>
                    <input asp-for="Classification" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Justification for Request</label>
                    <textarea asp-for="Justification" class="form-control" rows="4"></textarea>
                </div>

                <hr class="my-4 border-2" style="border-color: #009b94;" />

                <div class="mb-3 small text-muted">
                    <p>
                        This form must be completed and signed by the employee/contractor requesting access and their appropriate
                        line manager/department head. No request can be raised on behalf of another employee/contractor.
                    </p>
                    <p>
                        By signing this form, I confirm that I understand that information being transferred to my removable media
                        device is the property of the MEM, and I shall ensure the security of the device and be responsible for all
                        consequences borne out of the misuse or loss of any of my USB devices under my custody.
                    </p>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="ConfirmDeclaration" id="confirmDecl" />
                    <label class="form-check-label fw-semibold" for="confirmDecl">
                        I have read and agree to the declaration above.
                    </label>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" name="action" value="Submit" class="btn" style="background-color: #009b94; color: white; font-weight: bold;">Submit Request</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
