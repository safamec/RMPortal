@model MediaAccessRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Removable Media Access Request Form";
}

<h2>Removable Media Access Request Form</h2>
<hr />

<div class="text-danger mb-3" asp-validation-summary="All"></div>

<form asp-controller="Requests" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Request Number (read-only, but posted back) -->
    <div class="mb-3">
        <label class="form-label">Request Number</label>
        <input asp-for="RequestNumber" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Employment Status</label><br />
        <input type="radio" asp-for="EmploymentStatus" value="EMPLOYEE" /> Employee
        <input type="radio" asp-for="EmploymentStatus" value="CONTRACTOR" class="ms-3" /> Contractor
        <span class="text-danger" asp-validation-for="EmploymentStatus"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" readonly />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Employee Number/Employer</label>
        <input asp-for="EmployeeNumberOrEmployer" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Office Extension Number</label>
        <input asp-for="OfficeExtension" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Department</label>
        <input asp-for="Department" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Directorate</label>
        <input asp-for="Directorate" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Login Name (SAM)</label>
        <input asp-for="LoginName" class="form-control" readonly />
        <span class="text-danger" asp-validation-for="LoginName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">User Machine ID</label>
        <input asp-for="UserMachineId" class="form-control" />
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">End Date (required)</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span class="text-danger" asp-validation-for="EndDate"></span>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Classification of Information Being Accessed</label>
        <input asp-for="Classification" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Justification for Request</label>
        <textarea asp-for="Justification" class="form-control" rows="4"></textarea>
    </div>

    <hr />

    <!-- Declaration / policy text -->
    <div class="mb-2 small text-muted">
        <p>
            This form must be completed and signed by the employee/contractor requesting access and their appropriate
            line manager/department head. No request can be raised on behalf of another employee/contractor.
        </p>
        <p>
            By signing this form, I confirm that I understand that information being transferred to my removable media
            device is the property of the MEM, and I shall ensure the security of the device and be responsible for all
            consequences borne out of the misuse or loss of any of my USB devices under my custody.
        </p>
    </div>

    <!-- Agree checkbox -->
    <div class="form-check mb-4">
        <input class="form-check-input" type="checkbox" asp-for="ConfirmDeclaration" id="confirmDecl" />
        <label class="form-check-label" for="confirmDecl">
            I have read and agree to the declaration above.
        </label>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" name="action" value="Save" class="btn btn-secondary">Save Draft</button>
        <button type="submit" name="action" value="Submit" class="btn btn-primary">Submit Request</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
