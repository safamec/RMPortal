@model IEnumerable<RMPortal.Services.FakeUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelper

@{
    ViewData["Title"] = "Login Page";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<!-- المحتوى الرئيسي -->
<div class="login-container">
    <div class="text-section">
        <h2>choose user to Log In</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <label class="form-label">Choose User</label>
            <select name="sam" class="form-select">
                @foreach (var u in Model)
                {
                    <option value="@u.Sam">@u.DisplayName (@u.Sam)</option>
                }
            </select>

            <button type="submit">Login</button>
        </form>

        <p class="footer-tip">
            Tip: <b>bob</b> → RM_LineManagers, <b>carol</b> → RM_Security, <b>dave</b> → RM_ITAdmins.
        </p>
    </div>

    <div class="image-section">
        <!-- laptop illustration -->
        <svg class="laptop-illustration" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64">
            <rect x="8" y="10" width="48" height="32" rx="2" ry="2" fill="#f5f5f5" stroke="#3cb1a7" stroke-width="2"/>
            <rect x="12" y="14" width="40" height="24" fill="#ffffff"/>
            <rect x="4" y="42" width="56" height="6" fill="#326d68" rx="1" ry="1"/>
            <rect x="10" y="48" width="44" height="4" fill="#3cb1a7" rx="1" ry="1"/>
        </svg>
    </div>
</div>

@section Styles {
<style>

    body {
        margin: 0;
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(135deg, #f3fffe 0%, #ebf9f7 100%);
    }

    .login-container {
        background: #fff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border-radius: 20px;
        padding: 50px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-left: 100px;
        width: 900px;
        max-width: 95%;
    }

    .text-section {
        flex: 1;
        padding-right: 40px;
    }

    .text-section h1 {
        font-size: 40px;
        color: #2f8a83;
        margin: 0;
    }

    .text-section h2 {
        font-size: 36px;
        color: #1a1a1a;
        margin-top: 10px;
    }

    .text-section form {
        margin-top: 40px;
    }

    select, button {
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    button {
        margin-top: 20px;
        background-color: #308e86;
        color: white;
        border: none;
        cursor: pointer;
        transition: background 0.3s;
    }

    button:hover {
        background-color: #295b57;
    }

    .image-section {
        flex: 1;
        display: flex;
        justify-content: center;
    }

    .laptop-illustration {
        width: 300px;
    }

    .footer-tip {
        font-size: 12px;
        color: #777;
        margin-top: 15px;
    }

</style>
}
