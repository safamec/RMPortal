@model IEnumerable<RMPortal.Services.FakeUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<h2>Dev Login</h2>
<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <div class="mb-3">
        <label class="form-label">Choose user</label>
        <select name="sam" class="form-select">
            @foreach (var u in Model)
            {
                <option value="@u.Sam">@u.DisplayName (@u.Sam)</option>
            }
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
</form>

<hr />
<p class="small text-muted mb-0">
    Tip: <b>bob</b> → RM_LineManagers, <b>carol</b> → RM_Security, <b>dave</b> → RM_ITAdmins.
</p>
