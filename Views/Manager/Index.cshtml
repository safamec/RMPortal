@model IEnumerable<MediaAccessRequest>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Manager Inbox";
}

<h2 class="page-title">Manager Inbox</h2>

@if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success custom-alert">@ok</div>
}

@if (!Model.Any())
{
    <p class="text-muted">No requests awaiting your action.</p>
}
else
{
    <div class="table-container">
        <table class="table custom-table align-middle">
            <thead>
                <tr>
                    <th>Req #</th>
                    <th>Requester</th>
                    <th>Dept</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Justification</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.RequestNumber</td>
                    <td>@r.Name (@r.LoginName)</td>
                    <td>@r.Department</td>
                    <td>@(r.StartDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(r.EndDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td class="truncate">@r.Justification</td>
                    <td class="text-end text-nowrap">
                        <form asp-action="Approve" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-approve btn-sm rounded-pill px-3">Approve</button>
                        </form>

                        <form asp-action="Reject" method="post" class="d-inline ms-1">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <input type="hidden" name="notes" value="Rejected by manager." />
                            <button class="btn btn-reject btn-sm rounded-pill px-3">Reject</button>
                        </form>

                        <form asp-action="Delay" method="post" class="d-inline ms-1">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <input type="hidden" name="notes" value="Need more information." />
                            <button class="btn btn-delay btn-sm rounded-pill px-3">Delay</button>
                        </form>

                        <a class="btn btn-outline-secondary btn-sm rounded-pill px-3 ms-1"
                           asp-action="Details" asp-route-id="@r.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<style>
    .page-title {
        color: #009b94;
        font-weight: 600;
        margin-bottom: 1.2rem;
        font-size: 1.6rem;
        text-align: left;
    }

    .table-container {
        background-color: #fff;
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
    }

    .custom-table th {
        background-color: #009b94;
        color: #fff;
        border: none;
        padding: 12px 10px;
        text-align: left;
        font-weight: 500;
    }

    .custom-table td {
        border-top: 1px solid #33c5ba;
        padding: 10px;
        vertical-align: middle;
        color: #333;
    }

    .custom-table tr:hover {
        background-color: #f4fbfa;
        transition: background-color 0.2s ease;
    }

    .truncate {
        max-width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Buttons */
    .btn-approve {
        background: linear-gradient(135deg, #01827b, #25a79c);
        color: white;
        border: none;
        transition: 0.2s;
    }

    .btn-approve:hover {
        background: linear-gradient(135deg, #016b67, #299b94);
    }

    .btn-reject {
        background-color: #dc3545;
        color: white;
        border: none;
        transition: 0.2s;
    }

    .btn-reject:hover {
        background-color: #bb2d3b;
    }

    .btn-delay {
        background-color: #ffc107;
        color: #333;
        border: none;
        transition: 0.2s;
    }

    .btn-delay:hover {
        background-color: #e0a800;
    }

    .btn-outline-secondary {
        border: 1px solid #2ca79c;
        color: #027b75;
        background-color: transparent;
        transition: 0.2s;
    }

    .btn-outline-secondary:hover {
        background-color: #33c5ba;
        color: white;
    }

    .custom-alert {
        background-color: #33c5ba;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 15px;
        font-size: 0.95rem;
        margin-bottom: 15px;
    }

    .text-muted {
        color: #666;
        font-size: 0.95rem;
    }
</style>
